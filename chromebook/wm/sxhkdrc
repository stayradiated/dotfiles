#
# bspwm hotkeys
#

# Close/Kill window
super + {_,shift + }w
    bspc node -{c,k}

# Toggle layout between monocle and tiling
super + m
    bspc desktop -l next

# Balance layout so that all windows have the same area
# super + b
#     bspc desktop -B

# Toggle window layout between floating, fullscreen and tiled
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
    bspc node -g {locked,sticky,private}

# Tab between the last used window or workspace
super + {Tab,grave}
    bspc {node,desktop} -f last

# Switch window with last used window
super + apostrophe
    bspc node -s last

# Move the focused window into the 'given' window
super + y
    bspc node -w last.manual

# Move a window to the biggest layout on the desktop
# super + m
#     bspc node -s biggest

# Select a window or move a window
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# Loop through the window frames
super + {_,shift + }c
    bspc node -f {next,prev}

# Switch each window with the frame next to it
super + {comma,period}
    bspc desktop -C {backward,forward}

# Cycle through the desktops
super + bracket{left,right}
    bspc desktop -f {prev,next}

# Split a window in half
super + alt + {h,j,k,l}
    bspc node -p {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {node -p cancel,desktop -c}

# Push window
super + ctrl + {h,j,k,l}
    bspc node -e {left -50,down +50,up -50,right +50}

# Pull window
super + ctrl + shift + {h,j,k,l}
    bspc node -e {right -50,up +50,down -50,left +50}

super + ctrl + {1-9}
    bspc node -r 0.{1-9}

super + {_,shift + }{1-9, 0}
    bspc {desktop -f,node -d} ^{1-9,10}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

# Change desktop padding
alt + {bracketleft,bracketright}
  bspc config -d focused right_padding $((`bspc config -d focused right_padding` {+,-} 20 ))

alt + shift + {bracketleft,bracketright}
  bspc config -d focused left_padding $((`bspc config -d focused left_padding` {+,-} 20 ))

ctrl + {bracketleft,bracketright}
  bspc config -d focused bottom_padding $((`bspc config -d focused bottom_padding` {+,-} 20 ))

ctrl + shift + {bracketleft,bracketright}
  bspc config -d focused top_padding $((`bspc config -d focused top_padding` {+,-} 20 ))

# Move floating windows (requires baskerville's xdo)
super + {Left,Right,Up,Down}
    xdo move {-x -20,-x +20,-y -20,-y +20}

# Resize floating windows
super + shift + {Left,Right,Up,Down}
    xdo resize {-w -20,-w +20,-h -20,-h +20}

#
# wm independent hotkeys
#

# Open terminal
super + Return
    alacritty

# Launch dmenu
super + space
    dmenu_run -nb "#d8e2eb" -nf "#232328" -sb "#599bb5" -sf "#eaf5ff" -h 25 -fn "-misc-tamzen-medium-*-*-*-14-*-*-*-*-*-*-*"

# Quit BSPWM
super + alt + Escape
    bspc quit


# Make sxhkd reload its configuration files
super + Escape
    pkill -USR1 -x sxhkd

# Audio 
{F9,F10}
    amixer -q set Master 3%{-,+}

# backlight
super + shift + {comma,period}
    xbacklight -{dec,inc} 5
