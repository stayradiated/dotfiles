
# timezone + locale
export TZ=Pacific/Auckland
export LANG=en_NZ.UTF-8

# history
HISTFILE=~/.zsh_history
HISTSIZE=3000               # keep last 3000 lines in memory
SAVEHIST=10000              # nice for logging
setopt extended_history     # save timestamp

# path
export PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin/

# programs
export TERM=xterm-256color
export EDITOR=vim
export PAGER='less -isR'

# options
setopt autocd

# use vi mode
bindkey -v

# prompt
PROMPT='%B%F{black}> %f%b'

# key setup
bindkey '^E' backward-char
bindkey "^P" up-line-or-search
bindkey "^N" down-line-or-search
bindkey "^A" beginning-of-line
bindkey "^O" end-of-line

# aliases
alias ls='ls -hF --color=auto --group-directories-first'
alias fu='sudo $(fc -n -l -1)'
alias grep='grep --color=auto'
alias cp='cp -vi'
alias mv='mv -i'
alias rm='rm -i'

# functions
mcd () {
  mkdir $@ && cd $_
}

cd () {
  builtin cd $@ && ls
}

tmux-capture () {
  rm -f ~/tmux.hardcopy
  tmux capture-pane -eJ
  tmux save-buffer ~/tmux.hardcopy
  tmux delete-buffer
  cat ~/tmux.hardcopy | termio > $@
}

# ls colors
eval $(dircolors -b ~/dotfiles/apps/zsh/dircolors)

# The following lines were added by compinstall

zstyle ':completion:*' completer _expand _complete _ignored _correct _approximate
zstyle ':completion:*' matcher-list '' 'm:{[:lower:][:upper:]}={[:upper:][:lower:]}' 'r:|[._-]=** r:|=**' 'l:|=* r:|=*'
zstyle ':completion:*' max-errors 2
zstyle ':completion:*' prompt 'Correct errors: %e'
zstyle :compinstall filename '/home/stayrad/.zshrc'

autoload -Uz compinit
compinit
# End of lines added by compinstall

# added by travis gem
[ -f /home/stayrad/.travis/travis.sh ] && source /home/stayrad/.travis/travis.sh
