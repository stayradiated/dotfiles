#
# bspwm hotkeys
#

# Quit BSPWM
alt + super + Escape
    bspc quit

# Close window
alt + w
    bspc window -c

# Toggle layout between monocle and tiling
alt + t
    bspc desktop -l next

# Balance layout so that all windows have the same area
alt + b
    bspc desktop -B

# Toggle window layout between floating, fullscreen and tiled
alt + {s,f}
    bspc window -t {floating,fullscreen}

# Tab between the last used window or workspace
alt + {Tab,grave}
    bspc {window,desktop} -f last

# Switch window with last used window
alt + apostrophe
    bspc window -s last

# Move the focused window into the 'given' window
alt + y
    bspc window -w last.manual

# Move a window to the biggest layout on the desktop
alt + m
    bspc window -s biggest

# Select a window or move a window
alt + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

alt + {_,shift + }c
    bspc window -f {next,prev}

alt + {comma,period}
    bspc desktop -C {backward,forward}

alt + bracket{left,right}
    bspc desktop -f {prev,next}

alt + super + {h,j,k,l}
    bspc window -p {left,down,up,right}

alt + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

alt + ctrl + {h,j,k,l}
    bspc window -e {left,down,up,right} push

alt + super + shift + {h,j,k,l}
    bspc window -e {right,up,down,left} pull

alt + ctrl + {1-9}
    bspc window -r 0.{1-9}

alt + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} {1-9,0}

:button1
    bspc pointer -g focus

alt + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
    bspc pointer -t %i %i

#
# wm independent hotkeys
#

alt + Return
    urxvtc

alt + space
    dmenu_run -nb "#1D1F21" -nf "#C5C8C6" -sb "#282A2E" -sf "#90A959" -h 25 -p ">" -fn "-*-tamzen-medium-r-*-*-14-*-*-*-*-*-*-*"

# make sxhkd reload its configuration files:
alt + Escape
    pkill -USR1 -x sxhkd

# Control audio with keyboard
XF86Audio{Lower,Raise}Volume
    amixer -q set Master 5%{-,+}
