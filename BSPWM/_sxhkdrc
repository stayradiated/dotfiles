#
# bspwm hotkeys
#

# Quit BSPWM
super + alt + Escape
    bspc quit

# Close window
super + w
    bspc window -c

# Toggle layout between monocle and tiling
super + t
    bspc desktop -l next

# Balance layout so that all windows have the same area
super + b
    bspc desktop -B

# Toggle window layout between floating, fullscreen and tiled
super + {s,f}
    bspc window -t {floating,fullscreen}

# Tab between the last used window or workspace
super + {Tab,grave}
    bspc {window,desktop} -f last

# Switch window with last used window
super + apostrophe
    bspc window -s last

# Move the focused window into the 'given' window
super + y
    bspc window -w last.manual

# Move a window to the biggest layout on the desktop
super + m
    bspc window -s biggest

# Select a window or move a window
super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

# Loop through the window frames
super + {_,shift + }c
    bspc window -f {next,prev}

# Switch each window with the frame next to it
super + {comma,period}
    bspc desktop -C {backward,forward}

# Cycle through the desktops
super + bracket{left,right}
    bspc desktop -f {prev,next}

# Split a window in half
super + alt + {h,j,k,l}
    bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

# Push window
super + ctrl + {h,j,k,l}
    bspc window -e {left,down,up,right} push

# Pull window
super + ctrl + shift + {h,j,k,l}
    bspc window -e {right,up,down,left} pull

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-9, 0}
    bspc {desktop -f,window -d} {1-9,0}

:button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

#
# wm independent hotkeys
#

super + Return
    urxvtc

super + space
    dmenu_run -nb "#1D1F21" -nf "#C5C8C6" -sb "#282A2E" -sf "#90A959" -h 25 -p ">" -fn "-misc-tamzen-medium-r-*-*-14-*-*-*-*-*-*-*"

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# Control audio with keyboard
XF86Audio{Lower,Raise}Volume
    amixer -q set Master 5%{-,+}
